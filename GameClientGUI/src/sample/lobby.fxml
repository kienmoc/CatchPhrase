<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #003366;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LobbyController">
   <top>
      <Label prefHeight="95.0" prefWidth="156.0" text="Lobby" textFill="#ff9900e5" BorderPane.alignment="CENTER">
         <font>
            <Font name="Tlwg Mono Bold" size="50.0" />
         </font>
      </Label>
   </top>
   <center>
      <TextArea fx:id="playerList" editable="false" prefHeight="394.0" prefWidth="400.0" promptText="players" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="Tlwg Mono Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0" left="200.0" right="200.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
   <bottom>
      <Label fx:id="displayTimer" alignment="CENTER" contentDisplay="CENTER" prefHeight="111.0" prefWidth="403.0" text="Game starts once all players join.." textAlignment="CENTER" textFill="WHITE" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="Tlwg Mono Bold" size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>
